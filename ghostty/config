# -------------------------------------------------- #
# Shell
# -------------------------------------------------- #
shell-integration = detect
shell-integration-features = cursor,sudo,title,ssh-env,ssh-terminfo

# -------------------------------------------------- #
# Terminal
# -------------------------------------------------- #
term = xterm-ghostty
right-click-action = context-menu
alpha-blending = native

# -------------------------------------------------- #
# Macos
# -------------------------------------------------- #
# macos-titlebar-style          = transparent
macos-titlebar-style          = hidden
macos-titlebar-proxy-icon     = visible
macos-window-buttons          = visible
macos-window-shadow           = true
macos-option-as-alt           = true
macos-secure-input-indication = true

# -------------------------------------------------- #
# Font
# -------------------------------------------------- #
font-family  = "Monaspace Argon NF"
# font-family  = "FiraCode Nerd Font Mono"
bold-color   = bright
font-thicken = true

# -------------------------------------------------- #
# Theme 
# -------------------------------------------------- #
theme = Rose Pine
# theme = dark:,light:
# Rose Pine Moon, Rose Pine Dawn, Rose Pine, nord
background-opacity      = 0.85
background-blur         = 50
cursor-style            = bar
mouse-hide-while-typing = true

# -------------------------------------------------- #
# Shader 
# -------------------------------------------------- #
custom-shader-animation = always
custom-shader = "shaders/cursor_warp.glsl"
custom-shader = "shaders/ripple_cursor.glsl"
custom-shader = "shaders/ghostty-shaders/bloom.glsl"

# -------------------------------------------------- #
# Clipboard 
# -------------------------------------------------- #
clipboard-read                 = allow
clipboard-write                = allow
clipboard-paste-protection     = true
clipboard-trim-trailing-spaces = true
copy-on-select                 = false

# -------------------------------------------------- #
# Window 
# -------------------------------------------------- #
window-decoration      = auto
window-subtitle        = working-directory
window-colorspace      = display-p3
window-padding-balance = true
window-step-resize     = true
window-width           = 150
window-height          = 50

# -------------------------------------------------- #
# Quick-terminal
# -------------------------------------------------- #
keybind                           = global:f12=toggle_quick_terminal
quick-terminal-position           = center
quick-terminal-size               = 60%,70%
quick-terminal-autohide           = true
quick-terminal-animation-duration = 0.1
quick-terminal-screen             = mouse
quick-terminal-screen             = macos-menu-bar

# -------------------------------------------------- #
# Split 
# -------------------------------------------------- #
unfocused-split-opacity = 0.5

# -------------------------------------------------- #
# Keybinding
# -------------------------------------------------- #
# new window
keybind = shift+super+h=new_split:left
keybind = shift+super+j=new_split:down
keybind = shift+super+k=new_split:up
keybind = shift+super+l=new_split:right
# fullscreen
keybind = cmd+ctrl+f=toggle_split_zoom
# focus
keybind = cmd+ctrl+l=goto_split:right
keybind = cmd+ctrl+k=goto_split:up
keybind = cmd+ctrl+j=goto_split:down
keybind = cmd+ctrl+h=goto_split:left

keybind = cmd+ctrl+bracket_left=goto_split:previous
keybind = cmd+ctrl+bracket_right=goto_split:next
# resize
keybind = opt+ctrl+equal=equalize_splits
keybind = opt+ctrl+l=resize_split:right,10
keybind = opt+ctrl+k=resize_split:up,10
keybind = opt+ctrl+h=resize_split:left,10
keybind = opt+ctrl+j=resize_split:down,10
